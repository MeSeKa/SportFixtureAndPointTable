@model SportFixtureAndPointTable.Models.Team

@{
    ViewData["Title"] = "Details";
}

<div class="card mt-3 shadow">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Team Details: @Model.TeamName</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h5 class="text-primary">Team Information</h5>
                <p><strong>Team ID:</strong> @Model.TeamId</p>
                <p><strong>Team Name:</strong> @Model.TeamName</p>
            </div>
            <div class="col-md-6">
                <h5 class="text-success">Match Statistics</h5>
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Won Matches
                        <span class="badge bg-success">@ViewBag.WonMatches</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Lost Matches
                        <span class="badge bg-danger">@ViewBag.LostMatches</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Drawn Matches
                        <span class="badge bg-warning text-dark">@ViewBag.DrawnMatches</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        Not Yet Played Matches
                        <span class="badge bg-secondary">@ViewBag.NotYetPlayedMatches</span>

                    </li>
                </ul>
            </div>
        </div>

        <h5 class="text-info mt-4">Players in this Team</h5>
        @if (Model.Players != null && Model.Players.Any())
        {
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>Player Name</th>
                        <th>Position</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var player in Model.Players)
                    {
                        <tr>
                            <td>@player.PlayerName</td>
                            <td>@player.Position</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-danger">No players found for this team.</p>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.TeamId" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
